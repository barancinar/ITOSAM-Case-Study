@{
    ViewData["Title"] = "Kullanıcı Formu";
    var isEdit = Model is ItoCase.Core.DTOs.UserUpdateDto;
}

<div class="row justify-content-center py-1 fade-in">
    <div class="col-md-8 col-lg-6">
        <div class="modern-card mt-1">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-2">
                     <div class="bg-indigo-50 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px; background-color: #eef2ff;">
                        <i class="fa-solid @(isEdit ? "fa-user-pen" : "fa-user-plus") small"></i>
                     </div>
                    <h5 class="mb-0 fw-bold text-dark">
                        @(isEdit ? "Kullanıcı Düzenle" : "Yeni Kullanıcı")
                    </h5>
                </div>
                <a asp-action="Index" class="btn btn-light btn-sm border text-muted"> <i class="fa-solid fa-arrow-left me-1"></i> Geri</a>
            </div>
            
            <div class="card-body">
                <form asp-action="@(isEdit ? "Edit" : "Create")" method="post">
                @if(isEdit) { <input type="hidden" name="Id" value="@Model.Id" /> }
                
                <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold small text-secondary">Ad</label>
                        <input name="FirstName" value="@Model.FirstName" class="form-control rounded-pill" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold small text-secondary">Soyad</label>
                        <input name="LastName" value="@Model.LastName" class="form-control rounded-pill" required />
                    </div>
                    
                    @if(!isEdit)
                    {
                        <div class="col-md-12">
                            <label class="form-label fw-bold small text-secondary">Kullanıcı Adı</label>
                            <input name="UserName" value="@Model.UserName" class="form-control rounded-pill" required />
                        </div>
                    }

                    <div class="col-md-12">
                        <label class="form-label fw-bold small text-secondary">Email</label>
                        <input name="Email" value="@Model.Email" type="email" class="form-control rounded-pill" required />
                    </div>

                    @if(!isEdit)
                    {
                        <div class="col-md-12">
                            <label class="form-label fw-bold small text-secondary">Şifre</label>
                            <input name="Password" type="password" class="form-control rounded-pill" required />
                        </div>
                    }

                    <div class="col-md-12">
                        <label class="form-label fw-bold small text-secondary">Rol</label>
                        <select name="Role" class="form-select rounded-pill">
                            @foreach(var role in ViewBag.Roles)
                            {
                                <!option value="@role" @(Model.Role == role ? "selected" : "")>@role</!option>
                            }
                        </select>
                    </div>

                    <div class="col-12 mt-4 text-end">
                        <button type="submit" class="btn btn-premium px-4">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
