@model ItoCase.Core.DTOs.LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş Yap - İTO Case</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="~/css/premium.css" rel="stylesheet" />
    <style>
        body {
            background-color: var(--background-color);
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
        .login-container {
            width: 100%;
            max-width: 420px;
            padding: 1rem;
        }
    </style>
</head>

<body>
    <div class="login-container fade-in">
        <div class="text-center mb-4">
             <div class="bg-indigo-50 text-primary rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 64px; height: 64px; background-color: #eef2ff;">
                <i class="fa-solid fa-book-open fa-2x"></i>
             </div>
             <h4 class="fw-bold text-dark mb-1">Hoş Geldiniz</h4>
             <p class="text-muted small">Devam etmek için lütfen giriş yapın.</p>
        </div>

        <div class="modern-card">
            <div class="card-body p-4">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 shadow-sm small mb-3"></div>

                    <div class="mb-3">
                        <label class="form-label">Kullanıcı Adı</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="fa-solid fa-user"></i></span>
                            <input asp-for="UserName" class="form-control border-start-0 ps-0" placeholder="Kullanıcı adınız" />
                        </div>
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Şifre</label>
                         <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="fa-solid fa-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control border-start-0 ps-0" placeholder="••••••" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-premium w-100 py-2 mb-3">
                        Giriş Yap <i class="fa-solid fa-arrow-right ms-2"></i>
                    </button>
                    
                    <div class="text-center">
                        <small class="text-muted">Demo: <b>admin</b> / <b>Admin123!</b></small>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="text-center mt-4">
            <small class="text-muted opacity-75">&copy; 2025 ItoCase - Kurumsal Vaka Çalışması</small>
        </div>
    </div>
</body>
</html>