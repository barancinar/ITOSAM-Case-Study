@model ItoCase.Core.DTOs.BookCreateDto

@{
    ViewData["Title"] = "Yeni Kitap Ekle";
}

<div class="row justify-content-center fade-in">
    <div class="col-md-8">
        <div class="modern-card">
            <div class="card-header bg-white d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-2">
                     <div class="bg-indigo-50 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; background-color: #eef2ff;">
                        <i class="fa-solid fa-plus"></i>
                    </div>
                    <h5 class="mb-0 fw-bold text-dark">Yeni Kitap Ekle</h5>
                </div>
                <a asp-action="Index" class="btn btn-light btn-sm rounded-pill px-3">
                    <i class="fa-solid fa-arrow-left me-1"></i> Listeye Dön
                </a>
            </div>
            
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 shadow-sm mb-4"></div>

                    <div class="row g-3">
                        <!-- Temel Bilgiler -->
                        <div class="col-12">
                            <h6 class="text-uppercase text-muted small fw-bold mb-3 border-bottom pb-2">Temel Bilgiler</h6>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Kitap Adı</label>
                            <input asp-for="KitapAdi" class="form-control" placeholder="Örn: Sefiller" />
                            <span asp-validation-for="KitapAdi" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Yazar</label>
                            <input asp-for="Yazar" class="form-control" placeholder="Örn: Victor Hugo" />
                            <span asp-validation-for="Yazar" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Yayınevi</label>
                            <input asp-for="Yayinevi" class="form-control" />
                             <span asp-validation-for="Yayinevi" class="text-danger small"></span>
                        </div>
                         <div class="col-md-3">
                            <label class="form-label">Ana Kategori</label>
                            <input asp-for="AnaKategori" class="form-control" placeholder="Örn: Edebiyat" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Türü</label>
                            <input asp-for="Turu" class="form-control" placeholder="Örn: Roman" />
                        </div>

                         <div class="col-md-4">
                            <label class="form-label">Fiyat (TL)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light text-success fw-bold">₺</span>
                                <input asp-for="Fiyat" type="number" step="0.01" class="form-control" />
                            </div>
                        </div>
                         <div class="col-md-4">
                            <label class="form-label">Satış Rakamı</label>
                            <input asp-for="SatisRakamlari" type="number" class="form-control" />
                        </div>
                         <div class="col-md-4">
                            <label class="form-label">Basım Yılı</label>
                            <input asp-for="BasimYili" class="form-control" placeholder="2023" />
                        </div>

                        <!-- Detaylar -->
                         <div class="col-12 mt-4">
                            <h6 class="text-uppercase text-muted small fw-bold mb-3 border-bottom pb-2">Diğer Detaylar</h6>
                        </div>
                        
                        <div class="col-md-3">
                            <label class="form-label">ISBN</label>
                            <input asp-for="ISBN" class="form-control" />
                        </div>
                         <div class="col-md-3">
                            <label class="form-label">Sayfa Sayısı</label>
                            <input asp-for="SayfaSayisi" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Kağıt Tipi</label>
                            <input asp-for="KagitTipi" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Kapak Tipi</label>
                            <input asp-for="KapakTipi" class="form-control" />
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4 pt-3 border-top">
                        <button type="submit" class="btn btn-premium px-4 py-2">
                            <i class="fa-solid fa-save me-2"></i> Kitabı Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
