<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ItoCase.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ItoCase.Web.styles.css" asp-append-version="true" />
    <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-premium mb-4">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-book-open me-2"></i>
                    <span>ItoCase</span>
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ms-lg-4">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Book" asp-action="Index">
                                <i class="fa-solid fa-layer-group me-1 opacity-50"></i> Kitap Yönetimi
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                             <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Index">
                                    <i class="fa-solid fa-users me-1 opacity-50"></i> Kullanıcılar
                                </a>
                            </li>
                        }
                    </ul>
                    
                    <ul class="navbar-nav ms-auto align-items-center gap-2">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" data-bs-toggle="dropdown">
                                    <div class="bg-indigo-50 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 36px; height: 36px; background-color: #eef2ff;">
                                        <i class="fa-solid fa-user small"></i>
                                    </div>
                                    <span class="fw-medium text-dark">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg mt-2 p-2 rounded-3">
                                    <li>
                                        <a class="dropdown-item rounded-2 text-danger" asp-controller="Account" asp-action="Logout">
                                            <i class="fa-solid fa-right-from-bracket me-2"></i> Çıkış Yap
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-premium btn-sm" asp-controller="Account" asp-action="Login">
                                    Giriş Yap
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container py-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto py-4 bg-white">
        <div class="container text-center">
            <small>&copy; 2025 - ItoCase.Web - <span class="text-secondary opacity-75">Kurumsal Vaka Çalışması</span></small>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>